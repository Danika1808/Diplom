@model SignDocumentViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Document" asp-action="Documents">Документы</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Document" asp-action="AddDocument">Добавить документ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Document" asp-action="AppointSigner">Назначить подписанта</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Document" asp-action="SignDocument">Подписать документ</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="login-form">
    <form asp-action="SignDocument" method="post">
        <h1>Подписать документ</h1>
        <div class="content">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="input-field">
                <label asp-for="DocumentId" class="col-form-label" style="justify-content: left">Документ</label><br />
                <select class="form-select form-select-lg mb-3" asp-for="DocumentId" asp-items="Model.AppointSingerDocuments"></select>
            </div>
            <div class="input-field">
                <input type="password" asp-for="Password" placeholder="Пароль сертификата" autocomplete="new-password">
            </div>
        </div>
        <div class="action">
            <button type="submit">Подписать</button>
        </div>
    </form>
</div>